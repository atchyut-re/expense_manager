<h1><%= @category.name %></h1>

<table class="table table-bordered table-striped">
	<caption><%= @category.name %> expense details</caption>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @category.expenses.count == 0 %>
      <tr>
        <td colspan="4">
          No expenses found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
      <% @category.expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td><%=expense.description%></td>
          <td><%= expense.amount %></td>
          <td><%= link_to "Edit", edit_expense_path(expense), class: "btn btn-primary" %>
              <%= link_to "Delete", expense, method: :delete,
                    data: { confirm: "You sure?" }, class: 'btn btn-small btn-danger' %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>